datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id
  email      String
  signInName String
  createdAt  DateTime
  tasks      Task[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  Author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model Pos {
  id        String   @id
  category  String
  title     String
  createdAt DateTime
  status    String
  errorMsg  String?
}

model Class {
  id              String       @id @default(cuid()) // 一意な識別子 (UUIDも可)
  titleJa         String? // 科目名 (日本語)
  titleEn         String? // 科目名 (英語)
  courseYear      Int // 開講年度
  courseNo        Int // コース番号
  courseSemester  String? // 開講学期
  courseWeek      String? // 曜日
  coursePeriod    Int? // 時限
  courseLanguage  String? // 使用言語
  courseStudyYear Int[] // 対象年次
  instructorName  Instructor[] // 教員名 (1対多の関係)
  instructorType  String? // 教員の種類
  syllabusNoJa    Int? // シラバス番号(ja)
  syllabusNoEn    Int? // シラバス番号(en)
  createdAt       DateTime     @default(now()) // レコード作成日
  htmlClassUrl    String
}

// 教員名を保持するモデル (1つのClassに複数の教員)
model Instructor {
  id      String @id @default(cuid())
  nameJa  String // 教員名 (日本語)
  nameEn  String // 教員名 (英語)
  classId String // 関連するクラスID
  class   Class  @relation(fields: [classId], references: [id])
}

// 新たに追加したモデル
model Faculty {
  id          String       @id @default(cuid())
  name        String
  departments Department[]
  createdAt   DateTime     @default(now())
  Syllabus    Syllabus[]
}

model Department {
  id        String     @id @default(cuid())
  name      String
  facultyId String
  faculty   Faculty    @relation(fields: [facultyId], references: [id])
  syllabi   Syllabus[]
}

model Syllabus {
  id           String     @id @default(cuid())
  courseName   String
  instructor   String
  semester     String
  period       String
  conduction   String
  yearOfStudy  String
  language     String
  facultyId    String
  departmentId String
  faculty      Faculty    @relation(fields: [facultyId], references: [id])
  department   Department @relation(fields: [departmentId], references: [id])
  createdAt    DateTime   @default(now())
}

model Ingredient {
  id   Int    @id @default(autoincrement())
  name String
}

model Recipe {
  id          Int    @id @default(autoincrement())
  title       String
  description String

  ingredientId Int
}
